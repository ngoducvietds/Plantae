@model Plantae.Web.Models.ContaModel

@{
    ViewBag.Title = "Nova Conta";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('#DataInicial').attr("alt", "date");
        $('#SaldoInicial').attr("alt", "decimal");
        $('input:text').setMask();
    });
</script>

@using (Html.BeginForm((string)ViewBag.FormAction, "Conta")) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>ContaModel</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Nome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nome)
            @Html.ValidationMessageFor(model => model.Nome)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DataInicial)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DataInicial)
            @Html.ValidationMessageFor(model => model.DataInicial)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SaldoInicial)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SaldoInicial)
            @Html.ValidationMessageFor(model => model.SaldoInicial)
        </div>

        <p>
            <input type="submit" value="criar" />
        </p>
    </fieldset>
}
